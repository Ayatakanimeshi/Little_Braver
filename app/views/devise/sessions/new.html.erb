<div class="max-w-md mx-auto mt-10 bg-gray-800 text-gray-100 rounded-lg shadow-lg overflow-hidden">
  <div class="p-6">
    <h2 class="text-center text-2xl font-bold my-4">つづきからはじめる</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, "めーるあどれす", class: "block text-lg font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 rounded focus:outline-none focus:shadow-outline text-black" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "あいことば", class: "block text-lg font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 rounded focus:outline-none focus:shadow-outline text-black" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
          <%= f.label :remember_me, "ぼうけんのしょをひらいたままにする", class: "text-sm text-gray-400" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= f.submit "ぼうけんをはじめる", class: "border border-white text-white bg-transparent hover:bg-gray-800 hover:bg-opacity-70 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>
