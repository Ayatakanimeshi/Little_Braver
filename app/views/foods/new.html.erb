<!-- 例: app/views/foods/new.html.erb -->
<h1>新しい食べ物を追加</h1>

<%= form_with(model: @food, local: true) do |form| %>
  <% if @food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@food.errors.count, "error") %>が検出されました:</h2>

      <ul>
      <% @food.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "名前" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :image_url, "画像URL" %>
    <%= form.text_field :image_url %>
  </div>

  <div class="actions">
    <%= form.submit "追加" %>
  </div>
<% end %>

<%= link_to '戻る', foods_path %>
