<!-- app/views/bravers/new.html.erb -->
<div class="container mx-auto mt-8">
  <h1 class="text-2xl font-bold mb-4">新規勇者作成</h1>

  <%= form_with(model: @braver, local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
    <% if @braver.errors.any? %>
      <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">エラー：</strong>
        <span class="block sm:inline"><%= pluralize(@braver.errors.count, "件") %>が検出されました。</span>
        <ul class="list-disc list-inside">
          <% @braver.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, "名前", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :personality, "性格", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.select :personality, Braver.personalities.keys.map { |k| [k, k] }, {}, class: "shadow border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "作成", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
